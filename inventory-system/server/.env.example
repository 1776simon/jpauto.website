# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
CLIENT_URL=http://localhost:3000
ADMIN_URL=http://localhost:5173

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://consign.jpautomotivegroup.com,https://admin.jpautomotivegroup.com

# Cookie Configuration
COOKIE_DOMAIN=.jpautomotivegroup.com

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/jp_auto_inventory
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jp_auto_inventory
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Session Secret
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_CALLBACK_URL=http://localhost:5000/auth/microsoft/callback

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=jp-auto-inventory
R2_PUBLIC_URL=https://your-bucket.r2.cloudflarestorage.com

# Image Processing
MAX_IMAGE_SIZE_MB=10
MAX_IMAGES_PER_SUBMISSION=40
IMAGE_QUALITY=80
IMAGE_MAX_WIDTH=2000
THUMBNAIL_WIDTH=400

# File Upload
MAX_UPLOAD_SIZE_MB=200

# ClamAV (Virus Scanning) - Optional
CLAMAV_HOST=localhost
CLAMAV_PORT=3310
ENABLE_VIRUS_SCAN=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Export Paths
JEKYLL_EXPORT_PATH=../_vehicles
EXPORT_OUTPUT_PATH=./exports

# Website URL (for image URLs in exports)
WEBSITE_URL=https://jpautomotivegroup.com

# VIN Decoder - NHTSA API (free, no API key required)
# Uses https://vpic.nhtsa.dot.gov/api/

# Scheduled Exports
# Enable automated daily exports: Jekyll (1:55 AM) â†’ Dealer Center (2:00 AM)
ENABLE_SCHEDULED_EXPORTS=true

# Dealer Center Configuration
DEALER_CENTER_FTP_HOST=
DEALER_CENTER_FTP_USER=
DEALER_CENTER_FTP_PASSWORD=
DEALER_CENTER_FTP_PATH=/inventory

# AutoTrader Configuration
AUTOTRADER_DEALER_ID=
AUTOTRADER_FTP_HOST=
AUTOTRADER_FTP_USER=
AUTOTRADER_FTP_PASSWORD=

# CarGurus Configuration
CARGURUS_DEALER_ID=
CARGURUS_FTP_HOST=
CARGURUS_FTP_USER=
CARGURUS_FTP_PASSWORD=

# Auto.dev API Configuration (Market Research)
AUTODEV_API_KEY=your_autodev_api_key_here
AUTODEV_API_URL=https://api.auto.dev

# Market Research Configuration
MARKET_RESEARCH_ENABLED=true
MARKET_RESEARCH_SCHEDULE=0 0 */3 * *
MARKET_RESEARCH_ZIP_CODE=95814
MARKET_RESEARCH_RADIUS=150
MARKET_RESEARCH_ALERT_EMAIL=jpautomotivegroupllc@gmail.com

# Data Retention (days)
MARKET_SNAPSHOT_RETENTION_DAYS=180

# Email Configuration (Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=jpautomotivegroupllc@gmail.com
SMTP_PASS=your_gmail_app_password_here
SMTP_FROM="JP Auto Market Research <jpautomotivegroupllc@gmail.com>"

# Financing Application Email
# Option 1: Gmail SMTP (requires app password, may be blocked by some hosting providers)
EMAIL_USER=jpautomotivegroupllc@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_here
FINANCE_EMAIL=jpautomotivegroupllc@gmail.com

# Option 2: SendGrid (recommended for Railway - 100 free emails/day)
# Set USE_SENDGRID=true to use SendGrid instead of Gmail
# Get API key from: https://app.sendgrid.com/settings/api_keys
USE_SENDGRID=false
SENDGRID_API_KEY=your_sendgrid_api_key_here
